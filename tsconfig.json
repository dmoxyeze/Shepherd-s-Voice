{
  "compilerOptions": {
    /* Base Configuration */
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Path Resolution */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Directory Structure */
    // "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
